{
    "name": "node.js",
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
    "postAttachCommand": "npm install",
    "remoteUser": "node",
    "customizations": {
        "vscode": {
            "settings": {
                "markdownlint.config": {
                    "default": true,
                    "no-duplicate-heading": {
                        "siblings_only": true
                    },
                    "no-inline-html": false
                },
                "cSpell": {
                    "customDictionaries": {
                        "course-specific-words": {
                            "name": "course-specific-words",
                            "path": "${workspaceRoot}/slides/cspell-dict.txt",
                            "description": "Words used in this slide set",
                            "addWords": true
                        },
                        "custom": true
                    },
                    "ignorePaths": [
                        ".devcontainer",
                        ".git",
                        ".vscode",
                        ".vscode-insiders",
                        "package-lock.json"
                    ]
                }
            },
            "extensions": [
                "DavidAnson.vscode-markdownlint",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    }
}
