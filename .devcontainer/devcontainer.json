{
	"name": "node.js",
	"image": "mcr.microsoft.com/devcontainers/typescript-node",
	"postAttachCommand": "npm install",
	"remoteUser": "node",
	"customizations": {
        "vscode": {
            "settings": {
				"markdownlint.config": {
					"default": true,
					"no-duplicate-heading": {
						"siblings_only": true
					}
				}
            },
            "extensions": [
                "DavidAnson.vscode-markdownlint"
            ]
        }
    }
}
