<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cpp Programming Slides</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 50px;
            font-size: 2.5em;
            color: #ffffff;
        }
        .list-container::before {
            content: "";
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-image: url('/favicon.ico');
            background-repeat: no-repeat;
            background-size: 100px;
            width: 100px;
            height: 112.53px;
            opacity: 0.33;
        }
        .list-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #444;
            border-radius: 10px;
            background: #1f1f1f;
            text-align: left;
            position: relative;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        li {
            margin: 20px 0;
        }
        a {
            text-decoration: none;
            font-size: 1.5em;
            background: #2c2c2c;
            color: #d0d0d0;
            padding: 15px 30px;
            border-radius: 10px;
            transition: all 0.3s ease;
            display: inline-block;
        }
        a:hover {
            background: #444;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <h1>Cpp Programming Slides</h1>
    <div class="list-container">
        <ul>
            <% slide_decks.forEach(function(slide_deck) { %>
                <li><a href="/slides/<%= slide_deck %>"><%= slide_deck %></a></li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
